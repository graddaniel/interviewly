{
    "api": {
        "port": 7081
    },
    "database": {
        "host": "localhost",
        "port": 3306,
        "name": "interviewly",
        "forceSync": false
    },
    "validation": {
        "password": {
            "minLength": 8,
            "maxLength": 32
        },
        "name": {
            "minLength": 1,
            "maxLength": 32,
            "regexp": "^[A-Za-z ]+$"
        },
        "surname": {
            "minLength": 1,
            "maxLength": 32,
            "regexp": "^[A-Za-z]+$"
        },
        "companyName": {
            "minLength": 1,
            "maxLength": 32,
            "regexp": "^[A-Za-z ]+$"
        }
    },
    "registration": {
        "additionalNotificationsTarget": "yyyeey@gmail.com"
    },
    "contactRequest": {
        "notificationsEmail": "contact@interviewlyapp.com"
    },
    "token": {
        "validity_duration": "1d"
    },
    "mailer": {
        "host": "smtp.office365.com",
        "port": 587
    }
}
